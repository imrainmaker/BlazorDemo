@page "/Jeux"

<style>
    .sidebar {
        background-color: #f5f5f5;
        padding: 10px;
        flex-direction: column;
        height: 100%;
    }
    
    .content {
        margin-top: 10px;
        padding: 10px;
    }
    
    .sidebar ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }
    
    .sidebar li {
        margin-bottom: 5px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="sidebar">
                <ul>
                    <Virtualize Items="@Jeux" Context="j">
                        <li><a href="" @onclick="() => Selection(j.Id)" @onclick:preventDefault >@j.Nom</a></li>
                    </Virtualize>
                </ul>
            </div>
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-6 content">
                    <FormulaireJeu RetourneJeu="RecevoirReponse"></FormulaireJeu>
                </div>
            </div>
            @if (JeuSelectionne is not null)
            {
            <div class="row">
                <div class="col-md-6 content">
                    <GameDetails MonJeu="JeuSelectionne"></GameDetails>
                </div>
            </div>
            }
        </div>
    </div>
</div>

